{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": { "type": "string" },
    "env": { "type": "string" },
    "tags": { "type": "object" },
    "sqlAdminLogin": {
      "type": "string",
      "defaultValue": "sqladminuser"
    },
    "sqlAdminPassword": { "type": "secureString" },
    "aadAdminLogin": { "type": "string" }, // group display name (e.g., "sql-admins-analytics-dev")
    "aadAdminObjectId": { "type": "string" }, // group objectId GUID
    "aadTenantId": { "type": "secureString" }, // your tenant GUID

    /* --- SQL DB compute & backup knobs (defaults match your screenshot) --- */
    "computeTier": { "type": "string", "defaultValue": "GeneralPurpose" },
    "computeFamily": { "type": "string", "defaultValue": "Gen5" },
    "maxVcores": { "type": "int", "defaultValue": 2 },
    "minVcores": { "type": "string", "defaultValue": "0.5" },
    "autoPauseDelayMinutes": { "type": "int", "defaultValue": 60 },
    "backupRedundancy": {
      "type": "string",
      "defaultValue": "Local",
      "allowedValues": [ "Local", "Zone", "Geo", "GeoZone" ]
    },
    "maxSizeGB": { "type": "int", "defaultValue": 32 }

  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[concat('sta', parameters('env'), uniqueString(resourceGroup().id))]",
      "location": "[parameters('location')]",
      "sku": { "name": "Standard_LRS" },
      "kind": "StorageV2",
      "properties": {
        "isHnsEnabled": true
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2024-05-01-preview",
      "name": "[concat('sql', parameters('env'), uniqueString(resourceGroup().id))]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[parameters('sqlAdminLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdminPassword')]"
      },
      "tags": "[parameters('tags')]"
    },
    /* ===== SQL DATABASE (updated to serverless + LRS backups) ===== */
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2024-05-01-preview",
      "name": "[concat(concat('sql', parameters('env'), uniqueString(resourceGroup().id)), '/sqldbFinance')]",
      "location": "[parameters('location')]",
      "sku": {
      "name": "GP_S_Gen5",
      "tier": "[parameters('computeTier')]",
      "family": "[parameters('computeFamily')]",
      "capacity": "[parameters('maxVcores')]"          // max vCores
      },
      "kind": "v12.0,user,vcore,serverless",
      "properties": {
        "computeModel": "Serverless",
        "autoPauseDelay": "[parameters('autoPauseDelayMinutes')]",  // minutes
        "minCapacity": "[parameters('minVcores')]",                 // min vCores
        "requestedBackupStorageRedundancy": "[parameters('backupRedundancy')]", // LRS/...
        "zoneRedundant": false,
        "maxSizeBytes": "[mul(parameters('maxSizeGB'), 1073741824)]",
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "readScale": "Disabled",
        "isLedgerOn": false,
        "availabilityZone": "NoPreference",
        "sampleName": "AdventureWorksLT"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', concat('sql', parameters('env'), uniqueString(resourceGroup().id)))]"
      ],
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Sql/servers/administrators",
      "apiVersion": "2024-05-01-preview",
      "name": "[concat(concat('sql', parameters('env'), uniqueString(resourceGroup().id)), '/ActiveDirectory')]",
      "properties": {
        "administratorType": "ActiveDirectory",
        "login":   "[parameters('aadAdminLogin')]",     // group display name (helpful in portal)
        "sid":     "[parameters('aadAdminObjectId')]",  // group objectId (actual binding)
        "tenantId":"[parameters('aadTenantId')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', concat('sql', parameters('env'), uniqueString(resourceGroup().id)))]"
      ]
    },
    {
      "type": "Microsoft.DataFactory/factories",
      "apiVersion": "2018-06-01",
      "name": "[concat('adf', parameters('env'), uniqueString(resourceGroup().id))]",
      "location": "[parameters('location')]",
      "properties": {},
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Databricks/workspaces",
      "apiVersion": "2023-02-01",
      "name": "[concat('dbx', parameters('env'), uniqueString(resourceGroup().id))]",
      "location": "[parameters('location')]",
      "sku": { "name": "premium" },
      "properties": {
        "managedResourceGroupId": "[concat(subscription().id, '/resourceGroups/', concat('dbx-mrg-', parameters('env'), '-', uniqueString(resourceGroup().id)))]",
        "parameters": {
          "enableNoPublicIp": { "value": false }
        }
      },
      "tags": "[parameters('tags')]"
    }
  ]
}
